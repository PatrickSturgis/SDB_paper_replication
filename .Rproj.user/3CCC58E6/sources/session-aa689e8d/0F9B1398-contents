# === Run All Analysis Scripts ===

# List of all analysis scripts
analysis_scripts <- c(
  "scripts/Happiness.R",
  "scripts/Life_satisfaction.R", 
  "scripts/General_health.R",
  "scripts/Drink_alcohol.R",
  "scripts/Sports_exercise.R",
  "scripts/Gives_charity.R",
  "scripts/Volunteering.R",
  "scripts/Helping_community.R",
  "scripts/PGSI>0.R",
  "scripts/Smokes.R",
  "scripts/Vapes.R",
  "scripts/Smoked_cannabis.R",
  "scripts/Gambled_past_year.R"
)

# Run each script
for (script in analysis_scripts) {
  cat("Running:", script, "\n")
  source(script)
}

cat("All analyses complete!\n")